@model MVCCC.Models.ChangeUserNameViewModel
@{
    ViewBag.Title = "Change your user name";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>

    @using (Html.BeginForm("ChangeUserName", "Manage", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        @*<h4>變更密碼形式</h4>*@
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row">
            @Html.LabelFor(m => m.OldUserName, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.OldUserName, new { @class = "form-control" })
            </div>
        </div>
        <div class="row mt-2">
            @Html.LabelFor(m => m.NewUserName, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.NewUserName, new { @class = "form-control" })
            </div>
        </div>
        <div class="row mt-2">
            <div class="offset-md-2 col-md-10">
                <input type="submit" value="Change User Name" class="btn btn-outline-dark" />
            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}