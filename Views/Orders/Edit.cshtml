@model MVCCC.Models.Orders

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Order Details</h2>

@using (Html.BeginForm("Edit", "Orders", new { orderId = Model.OrderId }, FormMethod.Post))
{
    <div class="form-group row my-3">
        @Html.LabelFor(m => m.OrderId, new { @class = "col-form-label col-sm-2" })

        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.OrderId, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>


    <div class="form-group row my-3">
        @Html.LabelFor(m => m.Category, new { @class = "col-form-label col-sm-2" })

        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row my-3">
        @Html.LabelFor(m => m.Name, new { @class = "col-form-label col-sm-2" })

        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row my-3">
        @Html.LabelFor(m => m.Price, new { @class = "col-form-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number" })
        </div>
    </div>

    <div class="form-group row my-3">
        @Html.LabelFor(m => m.Customer, new { @class = "col-form-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Customer, new { @class = "form-control" })
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
}