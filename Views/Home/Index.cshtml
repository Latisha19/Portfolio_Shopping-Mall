@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Home Page";
}

<style>
</style>

<main>
    <h2>Index</h2>

    @if (Request.IsAuthenticated)
    {
        <div>
            Hello, @ViewBag.Name !!!
        </div>
        <div class="mt-3">
            <a href="~/Account/Login" class="btn btn-danger">Log Off</a>
        </div>
    }
    else
    {
        <div>
            Hello, Guest!<br />
            Would you want to Log in?
        </div>
        <div class="mt-3">
            <a href="~/Account/Login" class="btn btn-primary">Log In</a>
        </div>
    }
</main>